{
  "name": "styled-native-components",
  "version": "0.1.21",
  "description": "Styled components like lib for react-native(-web)",
  "repository": "https://github.com/MrLoh/styled-native-components",
  "author": "@MrLoh",
  "license": "MIT",
  "private": false,
  "source": "index.js",
  "main": "index.js",
  "dependencies": {
    "css-to-react-native": "^3.0.0"
  },
  "peerDependencies": {
    "react": ">= 16.8.0",
    "react-native": ">= 0.59.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "eslint": "^6.6.0",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "eslint-plugin-react-native": "^3.8.1",
    "eslint-plugin-react-perf": "^3.2.3",
    "prettier": "^1.19.1"
  },
  "prettier": {
    "printWidth": 100,
    "arrowParens": "always",
    "semi": true,
    "tabs": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "es6": true
    },
    "plugins": [
      "react",
      "react-hooks",
      "react-native",
      "react-perf"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-native/all",
      "plugin:react-perf/recommended"
    ]
  }
}
